---
interface Props {
  link: string;
  title: string;
  outlined?: boolean;
}

const { link, title, outlined = false } = Astro.props;
---

<li>
  <a
    href={link}
    class:list={[
      "text-2xl",
      "text-white",
      "p-2",
      "font-hakushu",
      "m-2",
      outlined && "outline",
    ]}>{title}</a
  >
</li>
